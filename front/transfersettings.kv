<TransferSettings>
    orientation: 'vertical'
    spacing: 1
    spacing2: 10
    canvas.before:
        Color:
            rgba: app.unactive_bcolor
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: 'Downloads'
        text_size: self.size
        halign: 'left'
        width: 100
    BoxLayout:
        id: opt1
        size_hint_y: None
        height: 26
        spacing: root.spacing2
        CheckBox:
            group: 'downloads'
            state: 'down' if root.download_setting == root.tsm.options_dict['opt1'] else 'normal'
            on_state: root.download_setting = root.tsm.options_dict['opt1']
        Label:
            text: root.tsm.options_dict['opt1']
            text_size: self.size
            halign: 'left'
            width: 100
    BoxLayout:
        id: op2
        size_hint_y: None
        height: 20
        spacing: root.spacing2
        CheckBox:
            group: 'downloads'
            state: 'down' if root.download_setting == root.tsm.options_dict['opt2'] else 'normal'
            on_state: root.download_setting = root.tsm.options_dict['opt2']
        Label:
            text: root.tsm.options_dict['opt2']
            text_size: self.size
            halign: 'left'
            width: 100

    BoxLayout:
        id: op3
        size_hint_y: None
        height: 20
        m_text: 'Overwrite if source is newer'
        spacing: root.spacing2
        CheckBox:
            group: 'downloads'
            state: 'down' if root.download_setting == root.tsm.options_dict['opt3']  else 'normal'
            on_state: root.download_setting = root.tsm.options_dict['opt3']
        Label:
