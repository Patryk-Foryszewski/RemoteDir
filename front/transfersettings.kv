            text_size: self.size
            halign: 'left'
            width: 100
    BoxLayout:
        size_hint_y: None
        height: 20
        spacing: root.spacing2
        CheckBox:
            group: 'downloads'
            state: 'down' if root.download_setting == root.tsm.options_dict['opt5']  else 'normal'
            on_state: root.download_setting = root.tsm.options_dict['opt5']
        Label:
            text: root.tsm.options_dict['opt5']
            text_size: self.size
            halign: 'left'
            width: 100


    Label:
        text: 'Uploads'
        text_size: self.size
        halign: 'left'
        width: 100
