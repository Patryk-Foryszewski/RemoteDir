<TransferSettings>
    orientation: 'vertical'
    spacing: 1
    spacing2: 10
    canvas.before:
        Color:
            rgba: app.unactive_bcolor
        Rectangle:
            pos: self.pos
            size: self.size
    Label:
        text: 'Downloads'
        text_size: self.size
        halign: 'left'
        width: 100
    BoxLayout:
        id: op1
        size_hint_y: None
        height: 26
        m_text: 'Ask everytime'
        spacing: root.spacing2
        CheckBox:
            group: 'downloads'
            state: 'down' if root.download_setting == op1.m_text else 'normal'
            on_state: root.download_setting = op1.m_text
        Label:
            text: op1.m_text
            text_size: self.size
            halign: 'left'
            width: 100
    BoxLayout:
        id: op2
        size_hint_y: None
        height: 20
        m_text: 'Overwrite'
        spacing: root.spacing2
        CheckBox:
            group: 'downloads'
            state: 'down' if root.download_setting == op2.m_text else 'normal'
            on_state: root.download_setting = op2.m_text
        Label:
            text: op2.m_text
            text_size: self.size
            halign: 'left'
            width: 100

