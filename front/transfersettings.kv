        size_hint_y: None
        height: 26
        spacing: root.spacing2
        CheckBox:
            group: 'uploads'
            state: 'down' if root.upload_setting == root.tsm.options_dict['opt1'] else 'normal'
            on_state: root.upload_setting = root.tsm.options_dict['opt1']
        Label:
            text: root.tsm.options_dict['opt1']
            text_size: self.size
            halign: 'left'
            width: 100
    BoxLayout:
        size_hint_y: None
