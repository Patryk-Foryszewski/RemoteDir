<MenuPopupBtn>
    size_hint: 1, None
    background_color: app.context_menu_normal_btn
    height: 20
    color: 0,0,0,1
    text_size: self.size
    halign: 'left'

<MenuPopup>
    background_color: (0, 0, 0, 0)
    ScrollView:
        id: scroll
        bar_width: 3
        bar_color: app.bar_color
        bar_inactive_color: app.bar_color
        effect_cls: "ScrollEffect"
        scroll_type: ['bars']

        BoxLayout:
            id: buttons_space
            orientation: 'vertical'
            spacing: root.spacing
            canvas.before:
                Color:
                    rgba: app.context_menu
                Rectangle:
                    pos: self.pos
                    size: self.size