<TextInput>
    background_normal: ''
    background_active: ''
    background_disabled_normal: ''
    size_hint: None, None
    height: 26
    cursor_color: app.cursor_color
    active_color: app.active_bcolor
    unactive_color: app.unactive_bcolor
    focused_color: app.main_bcolor
    background_color: self.unactive_color if not self.focus else self.focused_color
    valign: 'middle'
    write_tab: False
    p_y: self.height / 2.0 - (self.line_height / 2.0) * len(self._lines) if not self.multiline else 0
    padding: [2, self.p_y, 2, 2]




