<UpdatePopup>
    orientation: 'vertical'
    border: (0,0,0,0)
    spacing: 4
    auto_dismiss: False
    separator_color: ''

    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: app.active_window_color
        Rectangle:
            size: self.size
            pos: self.pos

    RelativeLayout:
        size_hint_y: None
        height: 300
        BoxLayout:
            pos_hint: {'center_x': .5, 'top': 1}
            orientation: 'vertical'
            spacing: 4
            size_hint: None, 1
            width: 400
            Label:
                text: 'Changelog:'
                text_size: self.size

            ScrollView:
                id: scroller
                scroll_type: ['bars', 'content']
                TextInput:
                    size_hint: 1, None
                    id: changelog
                    text: root.changelog
                    height: max(self.minimum_height, scroller.height)

            ProgressRow:
                id: progress


    BoxLayout:
        size_hint_y: None
        height: 20
        spacing: 2
        background: app.active_window_color
        canvas.before:
            Color:
                rgba: (0, 0, 0, 1)  if self.background is None else self.background #(4/255, 26/255, 47/255, 1)
            Rectangle:
                pos: self.pos
                size: self.size

        BoxLayout:

        Button:
            id: yes
            size_hint: None, None
            #font_size: 30
            size: 60, 20
            background_color: app.main_bcolor
            text: 'Install'
            color: app.font_color
            on_release: root.dispatch('on_answer','yes')

        Button:
            id: no
            size_hint: None, None
            #font_size: 30
            size: 60, 20
            background_color: app.main_bcolor
            text: 'Cancel'
            color: app.font_color
            on_press: root.dispatch('on_answer', 'no')

        BoxLayout: