<CredentialsPopup>
    orientation: 'vertical'
    background_color: app.active_window_color
    spacing: 4
    canvas.before:
        Color:
            rgba: (1,0,0,1) if self.background_color is None else self.background_color
        Rectangle:
            size: self.size
            pos: self.pos
    ErrLabel:
        id: message
        halign: 'center'
        text_size: self.size
        text: root.message
        pos_hint: {'top': 1, 'center_x': .5}

    ScreenManager:
        id: manager
        Screen:
            name: 'credentials'
            RelativeLayout:
                ScrollView:
                    id: scroller
                    pos_hint: {'top': 1 - message.height/root.height, 'center_x': .5}
                    size_hint: None, .7
                    width: 330 + self.bar_width if self.bar_width > 0 else 0
                    bar_width: 10
                    bar_color: app.bar_color
                    bar_inactive_color: app.bar_color
                    effect_cls: "ScrollEffect"
                    scroll_type: ['bars', 'content']
                    BoxLayout:
                        id: creds
                        orientation: 'vertical'
                        size_hint: 1, None
                        height: max(self.minimum_height, .6*scroller.height)
                        BoxLayout:
                            id: main_password_box
                            size_hint_y: None
                            opacity: 0
                            height: 0 if self.disabled else m_pswd_lbl.height + main_password.height + main_password_err.height
                            opacity: 1 if not self.disabled else 0
                            orientation: 'vertical'

                            Label:
                                id: m_pswd_lbl
                                text: 'Main password'
                                text_size: self.size
                            TextInput:
                                id: main_password
                                password: True
                                multiline: False
                                size_hint_x: 1
                                text: ''
                            ErrLabel:
                                id: main_password_err
                                text_size: self.size

                        Label:
                            text: 'Server name or IP:'
                            text_size: self.size
                        TextInput:
                            id: server
                            size_hint_x: 1
                            text: ''
                            multiline: False
                        ErrLabel:
                            id: server_err
                            text_size: self.size

                        Label:
                            text: 'User:'
                            text_size: self.size
                        TextInput:
                            id: user
                            size_hint_x: 1
                            multiline: False
                            text: ''

                        ErrLabel:
                            id: user_err
                            text_size: self.size

                        Label:
                            text: 'Password:'
                            text_size: self.size
                        TextInput:
                            id: password
                            multiline: False
                            password: True
                            size_hint_x: 1
                            text: ''
                            on_text: root.password = self.text

                        ErrLabel:
                            id: password_err
                            text_size: self.size

                        Label:
                            text: 'Port:'
                            text_size: self.size
                        TextInput:
                            id: port
                            size_hint_x: 1
                            text: '22'
                        ErrLabel:
                            id: port_err
                            text_size: self.size

                        Label:
                            text: 'Drop a ssh private key file or paste its path:'
                            text_size: self.size

                        TextInput:
                            id: private_key
                            size_hint_x: 1
                            text_size: self.size
                            multiline: False
                        ErrLabel:
                            id: private_key_err
                            text_size: self.size

                BoxLayout:
                    spacing: 1
                    size_hint: None, None
                    size: 330, 26
                    pos_hint: {'top': .25, 'center_x': .5}
                    BoxLayout:
                    Button:
                        id: main_password_btn
                        background_color: app.main_bcolor
                        color: app.font_color
                        text: 'Set main password'
                        width: 120
                        on_press:
                            manager.transition.direction = 'right';\
                            manager.current = 'main_password'
                    Button:
                        id: connect
                        background_color: app.main_bcolor
                        color: app.font_color
                        text: 'Connect'
                        width: 120
                        on_press: root.connect()

        Screen:
            name: 'main_password'
            RelativeLayout:
                size_hint_y: 1
                BoxLayout:

                    size_hint: None, .5
                    width: 330 # old_main_password_box.height + confirm_box.height + main_password_box.height + requirements.height
                    pos_hint: {'top': .9, 'center_x': .5}
                    orientation: 'vertical'

                    BoxLayout:
                        id: old_main_password_box
                        size_hint_y: None
                        disabled: main_password_box.disabled
                        opacity: 1 if not self.disabled else 0
                        height: 0 if not self.disabled else old_m_pswd_lbl.height + old_main_password_inp.height + main_password_inp_err.height
                        orientation: 'vertical'
                        Label:
                            id: old_m_pswd_lbl
                            text: 'Old main password:'
                            text_size: self.size
                        TextInput:
                            id: old_main_password_inp
                            multiline: False
                            password: True
                            size_hint_x: 1
                            text: ''
                            on_focus: root.validate_password(self.text, self.focus)
                            on_text: if len(self.text) == 0: root.clear_errors()
                        ErrLabel:
                            id: old_main_password_err
                            text_size: self.size

                    BoxLayout:
                        size_hint_y: None
                        id: main_password_box
                        orientation: 'vertical'
                        height: mpswd.height + main_password_inp.height + main_password_inp_err.height
                        Label:
                            id: mpswd
                            text: 'Main password:'
                            text_size: self.size
                        TextInput:
                            id: main_password_inp
                            multiline: False
                            password: True
                            size_hint_x: 1
                            text: ''
                            on_focus: root.validate_password(self.text, self.focus)
                            on_text: if len(self.text) == 0: root.clear_errors()
                        ErrLabel:
                            id: main_password_inp_err
                            text_size: self.size


                    BoxLayout:
                        size_hint_y: None
                        id: confirm_box
                        orientation: 'vertical'
                        height: conf.height + main_password_cmp.height + main_password_cmp_err.height
                        Label:
                            id: conf
                            text: 'Confirm:'
                            text_size: self.size
                        TextInput:
                            id: main_password_cmp
                            multiline: False
                            password: True
                            size_hint_x: 1
                            text: ''
                            on_text: root.confirm_main_password(main_password_inp.text, self.text)

                        ErrLabel:
                            id: main_password_cmp_err
                            text_size: self.size

                    Label:
                        id: requirements
                        text: root.password_requirements()
                        text_size: self.size
                        size: self.texture_size
                        size_hint: 1, 1
                        font_size: 13
                        halign: 'left'




                BoxLayout:
                    spacing: 1
                    size_hint: None, None
                    size: 330, 26
                    pos_hint: {'top': .25, 'center_x': .5}

                    BoxLayout:
                    Button:
                        background_color: app.main_bcolor
                        color: app.font_color
                        text: 'Go back'
                        width: 80
                        on_press:
                            manager.transition.direction = 'left';\
                            manager.current = 'credentials'
                    Button:
                        id: clear_main_password
                        background_color: app.main_bcolor
                        color: app.font_color
                        text: 'Clear'
                        width: 80
                        on_press: root.clear_main_password()

                    Button:
                        id: set_main_password
                        background_color: app.main_bcolor
                        color: app.font_color
                        text: 'Save'
                        width: 80
                        on_press: root.set_main_password()
